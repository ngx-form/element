{
  "angularCompilerOptions": {
    "genDir": "aot",
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "skipMetadataEmit" : false
  },
  "compileOnSave": false,
  "compilerOptions": {
    // "rootDir": "./",
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6", 
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [ ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
